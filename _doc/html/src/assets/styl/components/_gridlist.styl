/* Achieving */
.grid__wrapper
	padding 20px 0
	.title
		p
			+from-width($desktop_breakpoint)
				max-width 450px
				width 100%
				margin 0 auto
				
	.grid__list
		+from-width($desktop_breakpoint)
			max-width 1000px
			width 100%
			margin 0 auto
			
		ul
			list-style none
			padding 40px 0 20px
			margin 0
			justify-content flex-start
			flex-direction row
			flex-wrap wrap
			+from-width($tablet_breakpoint)
				justify-content center
				padding 40px 0
				flex-wrap wrap
			li
				padding 0
				flex 0 1 20%
				+below($desktop_breakpoint)
					flex 0 1 33%
					padding 0
					margin-bottom 20px
					&:last-child
						margin-bottom 0
				+below($tablet_breakpoint)
					flex 0 1 48%
				+from-width($desktop_breakpoint)
					margin-bottom 20px
					
				&:last-child
					padding 0
				
				.icon
					max-width 110px
					margin 0 auto
					+from-width($desktop_breakpoint)
						max-width 150px
				
				p
					padding 15px 0 0
					text-align center