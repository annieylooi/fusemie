header
	width 100%
	z-index 999
	//position relative
	position sticky 
	top 0 
	left 0
	transition all 100ms ease-in-out
	padding 10px 0px
	background $white
	box-shadow 0 3px 6px rgba(0,0,0,0.2)
		
	.header_listing
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		padding 0 20px
		+from-width($desktop_breakpoint)
			display block
			padding 0 50px
			
	.mbl-menu
		display block
		width 30px
		height 20px
		margin-top 10px
		margin-right 20px
		position relative
		cursor pointer
		transition 0.3s ease-in-out
		+below(320px)
			margin-right 10px
		+from-width($desktop_breakpoint)
			display none
			
		&.clicked
			transform rotate(270deg)
			span
				&:first-child
					top 10px
					transform rotate(45deg)
				&:nth-child(2)
					opacity 0
				&:last-child
					top 10px
					transform rotate(-45deg)
					
		span
			transition 0.3s ease-in-out
			display block
			width 100%
			height 2px
			background $blue
			border-radius 3px
			absolute left 0px
			&:first-child
				top 0px
			&:nth-child(2)
				top 9px
			&:last-child
				top 18px
	

	.logo
		flex 0 1 auto
		max-width 60px
		width 100%	
		z-index 1
		+from-width($desktop_breakpoint)
			margin-right 20px
			max-width 80px

	.header_wrapper
		align-items center
		
		.side_nav
			display none
			position absolute
			bottom 50px
			left 0
			right 0
			z-index 99
			max-width 170px
			margin 0 auto
			opacity 0
			+from-width($desktop_breakpoint)
				display flex
				margin-top -5px
				margin-left 30px
				position relative
				max-width none
				margin-right 0
				bottom 0	
				opacity 1		
			
			> div
				padding-right 15px
				text-align center
				&:last-child
					padding-right 0
				
			a
				color $gold
				img
					max-width 24px
					max-height 24px
					margin 0 auto 5px

		nav
			display flex
			flex 0 1 auto
			flex-direction column
			+from-width($desktop_breakpoint)
				flex-direction row
				align-items center
				justify-content space-between
				width 100%

			&.expand
				a
					color $white!important
				ul
					&:first-child
						top 74px
				.side_nav
					display flex
					animation opacity 1.5s ease-in-out
					opacity 1
											
			ul
				margin 0
				padding 0
				list-style none
				display inline-block
				li
					text-align left
					display inline-block
					margin 0 10px
					transition all 300ms ease
							
					&.current-menu-item, 
					&.current-menu-parent
						a
							color $gold
							
					&.menu-item-has-children
						position relative
						&:hover
							.no-touch &
								ul
									display block
									
					&.menu-item-has-children
						position relative
						
						a
							padding-bottom 10px
							&:hover
								ul
									display block
							

						ul
							display block
							background $white
							position relative
							top auto
							padding 15px 0
							margin 15px 0
							+from-width($desktop_breakpoint)
								absolute top 40px left -5px
								padding 15px
								background $white
								box-shadow 3px 3px 10px rgba(0 0 0 30%)
								display none
								margin 0
								
							
							li
								display block
								margin 0
								a
									padding-bottom 10px
									color $blue!important
									text-align center
									font-size 14px
									min-width 150px
									width 100%
									+from-width($desktop_breakpoint)
										text-align left
									&:hover
										color $gold!important

									&:after
										content none
					a
						display block
						color $blue
						text-align center
						font-size 15px
						letter-spacing .5px
						position relative
						padding 10px 0
						+from-width($desktop_breakpoint)
							padding 0
						&:after
							content ''
							transition width 0.2s ease-in-out
							width 0
							height 5px
							background-color $orange_icon_menu
							absolute bottom 0 left 0
							right 0
							margin 0 auto
						&:hover
							.no-touch &
								&:after
									width 100%
				&:first-child
					display none
					width 100%
					absolute top 60px left 0
					background-color $blue
					height calc(100vh - 60px)
					z-index 10
					padding-top 15%
					+from-width($desktop_breakpoint)
						padding-top 0
						width auto
						height auto
						display inline-block
						position initial
						top 0
						background-color unset
					li
						margin 10px 0
						display block
						position relative
						+from-width($desktop_breakpoint)
							margin 0 10px
							display inline-block
						.fa
							color $blue
							transition 0.3s ease-in-out
							absolute top 20px right 38%
							+from-width($desktop_breakpoint)
								display none
							&.expand
								transform rotate(180deg)
								top 23px
					a
						+from-width($desktop_breakpoint)
							padding-top 10px
		
	.mega-menu-wrap
		background transparent!important
		
		a
			font-family 'montserrat-bold',sans-serif!important
			transition all 300ms ease-in-out!important
			//line-height 18px!important
			&:hover
				color $gold!important
			
			&.mega-menu-link
				border-color $blue!important
				background transparent!important
					
		li
			color $blue!important
			
			.mega-indicator
				+from-width($desktop_breakpoint)
					display none!important
					
			&.mega-menu-item-type-custom
				.mega-menu-link
					cursor auto!important
				.mega-sub-menu
					.mega-menu-link
						cursor pointer!important
					
			&.mega-current-menu-item
				a
					color $gold!important
					
			&#mega-menu-item-88,
			&#mega-menu-item-89
				+from-width($desktop_breakpoint)
					display none!important
				a
					cursor pointer!important
					
			.mega-sub-menu
				background $white!important
				padding 15px!important
				+from-width($desktop_breakpoint)
					box-shadow 3px 3px 10px rgba(0 0 0 30%)!important
					width 200px!important
									
				a
					line-height 20px!important
					margin-bottom 15px!important
					

				li
					&:last-child
						a
							margin-bottom 0!important
				
				.mega-current-menu-item
					a
						color $blue!important
						&:hover
							color $gold!important
							
				a.mega-menu-link
					color $blue!important
					
					&:hover
						color $gold!important
						
	.mega-menu-wrap
		+below($desktop_breakpoint)
			position absolute!important
			top 20px!important
			right 0px!important
			width 100%!important
		
		.mega-toggle-block
			margin-right 20px!important
			margin-left 0
			
		.mega-menu
			+below($desktop_breakpoint)
				height 100vh!important
				padding 50px 20px!important
													
		
				
				
		